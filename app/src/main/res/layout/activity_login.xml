<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.jack.login.LoginActivity">
  <android.support.v7.widget.Toolbar
      app:navigationIcon="?attr/homeAsUpIndicator"
      android:id="@+id/toolbar_login"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:fitsSystemWindows="true"
      app:contentScrim="?attr/colorPrimary"
      android:background="@color/colorPrimary"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      >
    <TextView
        android:text="登录"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
  </android.support.v7.widget.Toolbar>
  <LinearLayout
      android:paddingLeft="10dp"
      android:layout_marginTop="10dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_marginBottom="10dp"
      android:layout_height="50dp">
    <TextView
        android:text="+86"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="10dp"
        android:layout_width="1px"
        android:background="#666"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"/>
    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:hint="请输入手机号码"
        android:layout_height="wrap_content" />
  </LinearLayout>
  <EditText
      android:id="@+id/edit_passwold"
      android:paddingLeft="10dp"
      android:password="true"
      android:hint="请输入密码"
      android:layout_width="match_parent"
      android:layout_height="50dp" />
  <TextView
      android:text="忘记密码"
      android:textColor="@color/colorPrimary"
      android:layout_gravity="right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <Button
      android:id="@+id/btn_phone"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="20dp"
      android:text="登录"
      android:layout_marginRight="10dp"
      android:background="@drawable/shape_login"
      android:layout_width="match_parent"
      android:textColor="#fff"
      android:textSize="20sp"
      android:layout_height="wrap_content" />
  <Button
      android:textSize="20sp"
      android:layout_marginLeft="10dp"
      android:text="注册"
      android:layout_marginTop="10dp"
      android:textColor="#666"
      android:background="@drawable/shape_register"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <LinearLayout
      android:gravity="bottom"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">
    <TextView
        android:text="其他登录方式"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
       >
      <ImageButton
          android:src="@mipmap/qq"
          android:id="@+id/btn_QQ"
          android:text="QQ登录"
          android:background="#fff"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content" />

      <ImageButton
          android:id="@+id/btn_weibo"
          android:text="微博登陆"
          android:src="@mipmap/weibo"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:background="#fff"
          android:layout_height="wrap_content" />

      <ImageButton
          android:id="@+id/btn_weixing"
          android:text="微信登陆"
          android:background="#fff"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:src="@mipmap/weixing"
          android:layout_height="wrap_content" />
    </LinearLayout>

  </LinearLayout>


</LinearLayout>
